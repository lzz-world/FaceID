<UserControl x:Class="Face.WPF.Views.VedioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Face.WPF.Views"
             xmlns:vm="clr-namespace:Face.WPF.ViewModels"
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms">
    <UserControl.DataContext>
        <vm:VedioViewModel x:Name="ViewModel" />
    </UserControl.DataContext>
    <Grid>
        <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="480">
            <wf:PictureBox x:Name="videoBox" />
        </WindowsFormsHost>
    </Grid>
</UserControl>
